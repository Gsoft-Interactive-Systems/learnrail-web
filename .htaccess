<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Skip if already in public directory
    RewriteCond %{REQUEST_URI} ^/public/
    RewriteRule ^ - [L]

    # Serve static assets from public folder (css, js, images, fonts)
    RewriteRule ^(css|js|images|fonts)/(.*)$ public/$1/$2 [L]

    # Serve existing files from public folder
    RewriteCond %{DOCUMENT_ROOT}/public%{REQUEST_URI} -f [OR]
    RewriteCond %{DOCUMENT_ROOT}/public%{REQUEST_URI} -d
    RewriteRule ^(.*)$ public/$1 [L]

    # All other requests go to public/index.php
    RewriteRule ^(.*)$ public/index.php [L,QSA]
</IfModule>
